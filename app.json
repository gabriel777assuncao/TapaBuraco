{
  "expo": {
    "name": "TapaBuraco",
    "slug": "tapaburaco",
    "owner": "gabrielassuncao77",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "userInterfaceStyle": "light",
    "platforms": ["android", "ios"],
    "web": {
      "bundler": "metro"
    },
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTabletMode": true,
      "bundleIdentifier": "com.gabrielassuncao77.tapaburaco"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "package": "com.gabrielassuncao77.tapaburaco"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Permitir que o TapaBuraco acesse sua câmera para fotografar buracos.",
          "microphonePermission": "Permitir acesso ao microfone (opcional)"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Permitir que o TapaBuraco use sua localização para registrar a posição exata do buraco.",
          "isIosLocationWhenInUsePermissionDescription": "Usar sua localização para marcar o local do buraco no mapa."
        }
      ]
    ],
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "d9671278-769f-4309-9948-369c4f9acef8"
      }
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/d9671278-769f-4309-9948-369c4f9acef8",
      "fallbackToCacheTimeout": 1000,
      "checkOnLaunch": "warning"
    }
  }
}
